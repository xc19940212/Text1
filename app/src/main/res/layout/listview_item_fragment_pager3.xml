<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_listview_item_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_all_out_black_24dp"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/tv_title_listview_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:layout_toRightOf="@+id/iv_listview_item_icon"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="22sp"/>
    <TextView
        android:id="@+id/tv_des_listview_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:layout_toRightOf="@+id/iv_listview_item_icon"
        android:layout_below="@+id/tv_title_listview_item"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"/>

</RelativeLayout>
